<h2 class="well">Add Task to $category.getName()</h2>

<form action="/tasks" method="post">
	<input id="categoryId" name="categoryId" type="hidden" value="$category.getId()">
	<div class="form-group">
		<label for="description">Task to Add</label>
		<input id="description" name="description" type="text">
	</div>
			<a href="/tasks/new">Add Another Task</a>
</form>
